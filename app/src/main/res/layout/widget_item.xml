<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:minHeight="80dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <!-- Contact photo/avatar on left -->
    <ImageView
        android:id="@+id/widget_item_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:contentDescription="Tap to call"/>

    <!-- Contact name in middle -->
    <TextView
        android:id="@+id/widget_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- Green call button on right -->
    <ImageView
        android:id="@+id/widget_item_call"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/ic_menu_call"
        android:background="@drawable/circle_green_background"
        android:padding="16dp"
        android:scaleType="centerInside"
        android:contentDescription="Call contact"/>

</LinearLayout>