default_platform(:android)

platform :android do
  desc "Build and upload to Play Store Internal Track"
  lane :deploy_internal do
    gradle(task: "bundle", build_type: "Release")
    upload_to_play_store(
      track: 'internal',
      package_name: 'ch.heuscher.simplephone',
      release_notes: {
        'en-US' => 'Initial release of Simple-Phone - The easy-to-use phone app for seniors and people with visual impairments.',
        'de-DE' => 'Initialer Release von Simple-Phone - Die einfache Telefon-App f√ºr Senioren und Menschen mit Sehbehinderungen.'
      }
      # json_key_data is picked up from SUPPLY_JSON_KEY_DATA environment variable
    )
  end
end
